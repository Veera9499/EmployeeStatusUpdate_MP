            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  Message: "Employee details displayed successfully"
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="post:\EmpStaus:application\json:employeestatusdetails-config">
        <db:insert doc:name="Insert" doc:id="695c0f44-f91a-4a83-a064-83b9239dfec0" config-ref="Database_Config">
			<db:sql ><![CDATA[insert into EmpStatus(EmpId,EmpName,Status)
 values(:ID,'Veera','Active')]]></db:sql>
			<db:input-parameters ><![CDATA[#[{
	ID : payload.EmpID
}]]]></db:input-parameters>
		</db:insert>
		<ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  StatusCode: 200,
  message: "Employee created successfully"
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
		<logger level="INFO" doc:name="Logger" doc:id="b5cc0098-9057-4bda-8d9a-08032416b568" message="Employee created successfully"/>
    </flow>
</mule>
