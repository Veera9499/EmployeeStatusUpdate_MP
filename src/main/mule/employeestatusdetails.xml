                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{message: "Resource not found"}]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">404</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>
        </error-handler>
    </flow>
    <flow name="put:\EmpStaus\UpdateEmpDetails:application\json:employeestatusdetails-config">
        <db:update doc:name="Update" doc:id="eb6aabd4-45c9-47c7-8148-4b682f5b6a61" config-ref="Database_Config">
			<db:sql ><![CDATA[update EmpStatus set EmpName = 'Veera Narendra' where EmpId = :ID]]></db:sql>
			<db:input-parameters ><![CDATA[#[{
	ID : attributes.queryParams.id
}]]]></db:input-parameters>
		</db:update>
		<ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  message: "Employee name updated successfully"
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="get:\EmpStaus\DisplayEmployeeDetails:application\json:employeestatusdetails-config">
        <db:select doc:name="Select" doc:id="29c92c1d-2c5c-40ed-85ef-212430d393e7" config-ref="Database_Config">
			<db:sql ><![CDATA[select * from EmpStatus where EmpId = :id]]></db:sql>
			<db:input-parameters ><![CDATA[#[{
	id: attributes.queryParams.id
}]]]></db:input-parameters>
		</db:select>
